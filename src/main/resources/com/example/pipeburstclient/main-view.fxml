<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.textfield.CustomTextField?>
<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pipeburstclient.MainController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <CustomTextField fx:id="lengthField" promptText="Length"/>
    <CustomTextField fx:id="diameterField" promptText="Diameter"/>
    <CustomTextField fx:id="horizontalQuantityField" promptText="Horizontal Quantity"/>
    <CustomTextField fx:id="verticalQuantityField" promptText="Vertical Quantity"/>

    <Button text="Создать Pipe" onAction="#inputPipeData"/>
    <CustomTextField fx:id="velocityField" promptText="Velocity"/>
    <CustomTextField fx:id="flowField" promptText="Flow"/>
    <CustomTextField fx:id="pressureField" promptText="Pressure"/>
    <CustomTextField fx:id="temperatureField" promptText="Temperature"/>
    <CustomTextField fx:id="densityField" promptText="Density"/>

    <Button text="Create Point" onAction="#inputPointsData"/>
</VBox>
